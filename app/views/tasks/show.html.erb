<h1><%= @flag.name + "_" + @task.name %></h1>
<%= link_to  @title_text + "の追加", new_user_project_work_target_flag_task_path(@user,@project,@work_target,@flag,@task) %>
<table>
    <tr>
        <th>タスク名</th>
        <th>ステータス</th>
        <th>サブタスク</th>
        <th>想定工数</th>
        <th>実際工数</th>
    </tr>
    <% @task_child.each do |t| %>
        <tr>
            <td><%= link_to  t.name, user_project_work_target_flag_task_path(@user,@project,@work_target,@flag,t.id) %></td>
            <td><%= t.status %></td>
            <td></td>
            <td><%= t.assumptionCost %></td>
        </tr>
    <% end %>
</table>