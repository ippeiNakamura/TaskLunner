<h1><%= @title_text + "の追加"  %></h1>
<%= form_tag({ :controller => 'oranges', :action => 'sub_task_create' }) do %>
    <table>
        <tr>
            <th>タスク名</th>
            <td><%= f.text_field :name %></td>
        </tr>
        <tr>
            <th>サブタスク</th>
            <td>
                <button>新規追加</button>
                <button>選択する</button>
            </td>
        </tr>
        <tr>
            <th>想定工数</th>
            <td><%= f.number_field :assumptionCost,step: "0.25"%></td>
        </tr>
        <tr>
            <th>メモ</th>
            <td><%= f.text_area :memo%></td>
        </tr>
            
    </table>
    <%= f.submit value:"追加"%>
<% end %>
