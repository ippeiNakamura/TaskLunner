<% if object.errors.any? %>
    <div id="error_explanation">
        <div>
            <%= object.errors.count %>つのエラーが存在しています。
        </div>
        <ul>
            <% object.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>
