<%= stylesheet_link_tag 'header' %>
<header>
<div class='header-inner'>
    <h1 class='header-logo'>
        <%=image_tag 'logo.png' %>
    </h1>
    <nav class='header-nav'>
        <ul class='header-navList'>
            <li><%= link_to  "目標設定","#" %></li>
