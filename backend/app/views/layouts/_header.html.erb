<%= stylesheet_link_tag 'header' %>
<header>
<div class='header-inner'>
    <h1 class='header-logo'>
        <%=image_tag 'logo.png' %>
    </h1>
    <nav class='header-nav'>
        <ul class='header-navList'>
            <li><%= link_to  "目標設定","#" %></li>
            <li><%= link_to  "タスク管理", "#" %></li>
            <li><%= link_to  "スケジューリング","#" %></li>
        </ul>
    </nav>
    <div class='acount-list-inner'>
        <ul class='acount-list'>
        <% if logged_in? %>
            <li class='acount-item'><%= link_to  "ログアウト", logout_path, method: :delete %></li>
            <li class='acount-item'><%= link_to  "プロフィール", current_user %></li>
        <% else %>
            <li class='acount-item'><%= link_to  "ログイン", login_path %></li>
        <% end %>
        </ul>
    </div>
    
</div>
</header>